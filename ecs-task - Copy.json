{
  "family": "flask-llm-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["EC2"],
  "cpu": "1024",
  "memory": "4096",
  "containerDefinitions": [
    {
      "name": "flask-llm",
      "image": "<acct>.dkr.ecr.ap-southeast-2.amazonaws.com/flask-llm:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 5000,
          "hostPort": 5000
        }
      ],
      "resourceRequirements": [
        {
          "type": "GPU",
          "value": "1"
        }
      ]
    }
  ]
}
